# ============================================================================
# APACHE CONFIGURATION FOR TYPEFAST
# ============================================================================
# This file prevents directory listing and improves security

# Prevent directory listing
Options -Indexes

# Redirect to main page if accessing pages directory directly
DirectoryIndex index.php

# Security headers
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>

# Hide sensitive files
<Files "*.sql">
    Order allow,deny
    Deny from all
</Files>

<Files ".htaccess">
    Order allow,deny
    Deny from all
</Files>
